Section "ServerLayout"
    Identifier  "layout0"
    Screen 0    "nvidia"
    Inactive    "intel"
    Option      "AllowNVIDIAGPUScreens"
EndSection

Section "Device"
	Identifier  "intel"
	Driver      "modesetting"
	BusID       "PCI:0:2:0"
	# Option      "AccelMethod" "UXA"
EndSection

Section "Screen"
    Identifier  "intel"
    Device      "intel"
EndSection

Section "Device"
    Identifier  "nvidia"
    Driver      "nvidia"
    BusID       "PCI:3:0:0"
    Option      "AllowExternalGpus" "True"
EndSection

Section "Screen"
    Identifier  "nvidia"
    Device      "nvidia"
EndSection
